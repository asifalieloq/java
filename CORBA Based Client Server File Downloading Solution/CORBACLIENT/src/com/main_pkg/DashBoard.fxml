<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="AnchorPaneMain" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main_pkg.DashBoardController">
    <children>
        <HBox style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
            <children>
                <HBox style="-fx-background-color: white;">
                    <children>
                        <VBox id="menuvb" fx:id="MenueAnchor" minWidth="170.0" prefWidth="170.0" style="-fx-background-color: #2A3F54;">
                            <children>
                                <Hyperlink fx:id="loginId" alignment="CENTER" prefHeight="30" prefWidth="165.0" text="File Share App" textFill="#e5ff00">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Hyperlink>
                                <VBox id="menumainvb" fx:id="MenuButtonBox" prefWidth="170.0" style="-fx-background-color: #2A3F54;">
                                    <children>
                                        <JFXButton   alignment="TOP_LEFT" graphicTextGap="7.0" layoutX="10.0" layoutY="10.0" maxHeight="0.0" minHeight="0.0" onAction="#sharefiles" prefHeight="7.0" prefWidth="145.0" styleClass="MenueMainButton" text=" " textFill="WHITE">
                                            <font>
                                                <Font size="17.0" />
                                            </font>
                                        </JFXButton>
                                        <JFXButton  alignment="CENTER" contentDisplay="RIGHT" graphicTextGap="7.0" maxHeight="40.0" onAction="#AccessFiles" prefHeight="40.0" prefWidth="170.0" styleClass="MenueMainButton" text="Download Files" textAlignment="CENTER" textFill="WHITE">
                                            <font>
                                                <Font size="17.0" />
                                            </font>
                                            <VBox.margin>
                                                <Insets bottom="2.0" top="30.0" />
                                            </VBox.margin>
                                        </JFXButton>
                                    </children>
                                </VBox>
                                <HBox alignment="CENTER" prefHeight="23.0" prefWidth="140.0" spacing="20.0" style="-fx-background-color: #2e8194;">
                                    <children>
                                        <JFXButton fx:id="RemoteServer" onAction="#RemoteServer" text="Connect Server" textFill="#e5ff00">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </JFXButton>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox fx:id="MainAnchor" style="-fx-background-color: white;" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </children>
</VBox>
